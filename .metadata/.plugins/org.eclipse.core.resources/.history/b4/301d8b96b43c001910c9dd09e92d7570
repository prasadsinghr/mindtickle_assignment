{
	LoginPage lp;
	ContentHomePage homepage;
	CreateNewCoursePage createpage;
	EditCoursePage ecp;
	@BeforeSuite
	public void setUp()
	{
		launchBrowser();
		lp=new LoginPage();
		homepage=lp.login(prop.getProperty("username"), prop.getProperty("password"));
		createpage =homepage.createCourse();
